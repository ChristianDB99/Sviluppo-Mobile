<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/white"
            app:cardCornerRadius="32dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_click"
                    android:layout_width="380dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="15dp"
                    app:srcCompat="@drawable/curvebuttonbg" />

                <ImageView
                    android:id="@+id/imageViewVisita"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignStart="@+id/image_click"
                    android:layout_alignTop="@+id/image_click"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@drawable/bottonevisite" />

                <ImageView
                    android:id="@+id/VisiteOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/image_click"
                    android:layout_alignEnd="@+id/image_click"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/ic_baseline_more_vert_24" />

                <TextView
                    android:id="@+id/list_my_visite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/image_click"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageViewVisita"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_descrizione"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_my_visite"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_toEndOf="@+id/imageViewVisita"
                    android:text="@string/descrizione_visita"
                    android:textColor="#6003082b"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/icon_check"
                    android:layout_width="55dp"
                    android:layout_height="38dp"
                    android:layout_alignTop="@+id/image_click"
                    android:layout_alignEnd="@+id/image_click"
                    android:layout_marginTop="46dp"
                    android:layout_marginEnd="16dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_baseline_check_circle_24" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>