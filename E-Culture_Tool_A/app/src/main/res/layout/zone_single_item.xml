<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_Zone"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/curvebuttonbg" />

        <ImageView
            android:id="@+id/imageViewZone"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/bottonezona" />

        <TextView
            android:id="@+id/list_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp"
            android:text="Zona 1"
            android:textColor="#d703082b"
            android:textSize="23dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/list_descrizione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="65dp"
            android:text="Piccola Descrizione zona"
            android:textColor="#6003082b"
            android:textSize="14dp"
            android:textStyle="bold"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>